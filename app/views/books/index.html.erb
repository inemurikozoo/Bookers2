<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <%= @books.each do |book| %>
    <tbody>
        <tr>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            
        </tr>
    </tbody>
    <% end %>
</table>