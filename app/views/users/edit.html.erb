<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>User info</h2>
                <%= render "devise/shared/error_messages", resource: @user %>
            <%= form_with model: @user do |f| %>
            <div class="form-group">
                <label for="user_name">Name</label><br />
                <%= f.text_field :name, class: "form-control", autofocus: true %>
            </div>    
            <div class="form-group">
                <label for="user_image">Image</label>
                <%= f.file_field :profile_image, class: "form-control-file user_image", accept: "image/*" %>
                <!-- 写真だけを登録できるように制限↑ -->
            </div>
            <div class="form-group">
                <label for="introduction">Introduction</label><br />
                <%= f.text_area :introduction, class: "form-control introduction", autofocus: true %>
            </div>
            <div class="form-group">
                <%= f.submit 'Update User', class: "btn btn-secondary" %>
            </div>
            <% end %>
        </div>
    </div>
</div>