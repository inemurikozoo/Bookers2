<h1>Books</h1>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
      <tbody>
        <tr>
          <td>
            <p><%= image_tag book.@user.get_profile_image(100,100) %></p>
          </td>
          <td>
            <p><%= link_to book_path(book.id) %></p>
          </td>
          <td>
            <p><%= book.body %></p>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>